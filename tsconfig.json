{
	"include": [
    "**/*.ts",

  ],
  "compilerOptions": {
		"outDir": "./build",
    "target": "es2016",                                  
    "module": "commonjs",           
		"rootDir": "src",          
		"baseUrl": ".",       
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    "strict": true,                                      

    "skipLibCheck": true,
    "paths": {
            "src/*": ["./src/*"],
			"services/*": ["./src/services/*"],
        },
  },
	"exclude": ["node_modules", "build", "prisma"]
}
